<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.create_event.CreateEventFragment">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:layout_editor_absoluteX="29dp"
            tools:layout_editor_absoluteY="137dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/PhotoEvent"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="10dp"
                    app:layout_constraintStart_toStartOf="@+id/view40"
                    app:layout_constraintTop_toBottomOf="@+id/view40"
                    tools:ignore="MissingConstraints" />
                <ImageView
                    android:id="@+id/GoBackToProfile"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/go_back"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/inter"
                    android:gravity="center"
                    android:text="Создание мероприятия"
                    android:textColor="@color/black"
                    android:textSize="25sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    tools:ignore="MissingConstraints" />


                <CalendarView
                    android:id="@+id/calendarView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.493"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view36" />

                <View
                    android:id="@+id/view37"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/calendarView" />

                <EditText
                    android:id="@+id/topic"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view37"
                    app:layout_constraintEnd_toEndOf="@+id/view37"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="@+id/view37"
                    app:layout_constraintTop_toTopOf="@+id/view37"
                    app:layout_constraintVertical_bias="0.0"
                    android:hint="Тематика мероприятия" />

                <View
                    android:id="@+id/view39"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.498"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view37"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/description"
                    android:layout_width="350dp"
                    android:layout_height="100dp"
                    android:background="@null"
                    android:ems="10"
                    android:gravity="left"
                    android:hint="Описание"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view39"
                    app:layout_constraintEnd_toEndOf="@+id/view39"
                    app:layout_constraintStart_toStartOf="@+id/view39"
                    app:layout_constraintTop_toTopOf="@+id/view39"
                    tools:fontFamily="@font/inter" />

                <Button
                    android:id="@+id/create_event"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:backgroundTint="@color/fourth"
                    android:fontFamily="@font/inter"
                    android:text="Создать"
                    android:textColor="@color/black"
                    app:cornerRadius="15dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/PhotoEvent" />

                <View
                    android:id="@+id/view36"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/input_rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/textView11"
                    tools:ignore="MissingConstraints" />

                <EditText
                    android:id="@+id/address"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:ems="10"
                    android:fontFamily="@font/inter"
                    android:hint="Введите адрес"
                    android:inputType="textPersonName"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view36"
                    app:layout_constraintEnd_toEndOf="@+id/view36"
                    app:layout_constraintHorizontal_bias="0.492"
                    app:layout_constraintStart_toStartOf="@+id/view36"
                    app:layout_constraintTop_toTopOf="@+id/view36" />

                <View
                    android:id="@+id/view40"
                    android:layout_width="350dp"
                    android:layout_height="50dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/input_rectangle"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/view39" />

                <ImageView
                    android:id="@+id/LoadImage"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    app:layout_constraintBottom_toBottomOf="@+id/view40"
                    app:layout_constraintStart_toStartOf="@+id/view40"
                    app:layout_constraintTop_toTopOf="@+id/view40"
                    app:srcCompat="@drawable/load_from_gallery" />

                <TextView
                    android:id="@+id/textView14"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Загрузить фотографию"
                    android:textSize="19sp"
                    app:layout_constraintEnd_toEndOf="@+id/view40"
                    app:layout_constraintStart_toEndOf="@+id/LoadImage"
                    tools:layout_editor_absoluteY="677dp"
                    tools:ignore="MissingConstraints" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>