<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".ui.create_profile.CreateProfileFragment">


            <TextView
                android:id="@+id/textView13"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Редактрование профиля"
                android:textColor="@color/black"
                android:textSize="20sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/view38"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.508"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view43"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/email"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@null"
                android:ems="10"
                android:hint="Новый адрес электронной почты"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/view38"
                app:layout_constraintEnd_toEndOf="@+id/view38"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="@+id/view38"
                app:layout_constraintTop_toTopOf="@+id/view38"
                app:layout_constraintVertical_bias="1.0" />

            <View
                android:id="@+id/view41"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view38" />

            <EditText
                android:id="@+id/city"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@null"
                android:ems="10"
                android:hint="Ваш город"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/view41"
                app:layout_constraintEnd_toEndOf="@+id/view41"
                app:layout_constraintStart_toStartOf="@+id/view41"
                app:layout_constraintTop_toTopOf="@+id/view41" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout5"
                android:backgroundTint="@color/fourth"
                android:layout_width="350dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view41"
                tools:background="@drawable/input_rectangle"
                tools:ignore="MissingConstraints">

                <EditText
                    android:id="@+id/AboutYorself"
                    android:layout_width="350dp"
                    android:layout_height="wrap_content"
                    android:background="@null"
                    android:hint="Напишите пару слов о себе"
                    android:padding="5dp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHeight_min="50dp"
                    app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_bias="0.0" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <Button
                android:id="@+id/CreateProfileBtn"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="10dp"
                android:backgroundTint="@color/fourth"
                android:fontFamily="@font/inter"
                android:text="Редактировать"
                android:textColor="@color/black"
                app:cornerRadius="15dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/IsOrganizer" />

            <View
                android:id="@+id/view42"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView13" />

            <EditText
                android:id="@+id/name"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@null"
                android:ems="10"
                android:hint="Имя"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/view42"
                app:layout_constraintEnd_toEndOf="@+id/view42"
                app:layout_constraintStart_toStartOf="@+id/view42"
                app:layout_constraintTop_toTopOf="@+id/view42" />

            <View
                android:id="@+id/view43"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/view42"
                tools:ignore="MissingConstraints" />

            <EditText
                android:id="@+id/surname"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:background="@null"
                android:ems="10"
                android:hint="Фамилия"
                android:inputType="textPersonName"
                android:padding="5dp"
                app:layout_constraintBottom_toBottomOf="@+id/view43"
                app:layout_constraintEnd_toEndOf="@+id/view43"
                app:layout_constraintStart_toStartOf="@+id/view43"
                app:layout_constraintTop_toTopOf="@+id/view43" />

            <CheckBox
                android:id="@+id/IsOrganizer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Хотите быть организатором?"
                app:layout_constraintStart_toStartOf="@+id/CreateProfileBtn"
                app:layout_constraintTop_toBottomOf="@+id/PhotoProfile"
                tools:ignore="MissingConstraints" />

            <ImageView
                android:id="@+id/GoToHome"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/textView13"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/textView13"
                app:srcCompat="@drawable/profile_home" />

            <View
                android:id="@+id/view45"
                android:layout_width="350dp"
                android:layout_height="50dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/input_rectangle"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/constraintLayout5" />

            <ImageView
                android:id="@+id/LoadFromGallery"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                app:layout_constraintBottom_toBottomOf="@+id/view45"
                app:layout_constraintStart_toStartOf="@+id/view45"
                app:layout_constraintTop_toTopOf="@+id/view45"
                app:srcCompat="@drawable/load_from_gallery" />

            <TextView
                android:id="@+id/textView12"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter"
                android:text="Загрузить фотографию"
                android:textSize="19sp"
                app:layout_constraintBottom_toBottomOf="@+id/view45"
                app:layout_constraintEnd_toEndOf="@+id/view45"
                app:layout_constraintStart_toEndOf="@+id/LoadFromGallery"
                app:layout_constraintTop_toTopOf="@+id/view45" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/PhotoProfile"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="@+id/view45"
                app:layout_constraintTop_toBottomOf="@+id/view45"
                tools:ignore="MissingConstraints" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>